<div class="container-fluid px-1 px-sm-3 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="row card0">
            <div class="card1 col-lg-8 col-md-7">
                <div class="text-center"> <img class="image mt-5" src="https://i.imgur.com/M8VyA2h.png"> </div>
                <div class="row ">
                    <h1 class="large-font mr-3"><%=temp %><i class="far fa-circle degrees"></i></h1>
                    <div class="col-lg-4">
                        <h2 class="mt-3 mb-0"><%=query%></h2> <small><%=Day%></small>
                    </div>
                    <div class="col-lg-4">
                        <h2 class="mt-3 mb-0"><%=condition%></h2>
                    </div>
                    <div class="col-lg-4">
                       <img class="result-img" src= <%= imageUrl %> >
                    </div>
                </div>
            </div>
            <div class="card2 col-lg-4 col-md-5">
                <div class="mr-5">
                    <p>Weather Details</p>
                    <div class="row px-4">
                        <p class="light-text">Cloudy</p>
                        <p class="ml-auto"><%= clouds %>%</p>
                    </div>
                    <div class="row px-4">
                        <p class="light-text">Humidity</p>
                        <p class="ml-auto"><%=humid%>%</p>
                    </div>
                    <div class="row px-4">
                        <p class="light-text">Wind</p>
                        <p class="ml-auto"><%=windspeed%>km/h</p>
                    </div>
                    <div class="line mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" charset="utf-8"></script>

